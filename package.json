{
  "name": "monstars",
  "version": "1.0.0",
  "description": "A Node.js application that stores nba statistics in a local mongo db and represents the statistics in D3.js visualizations",
  "main": "/db/index.js",
  "scripts": {
    "clean": "rimraf coverage",
    "cov": "opener coverage/lcov-report/index.html",
    "cov-check": "istanbul report && istanbul check-coverage",
    "lint": "eslint --ignore-path .gitignore .",
    "start": "node ./db/index.js",
    "test": "npm run test-cov && npm run lint && npm run cov-check",
    "test-cov": "istanbul cover --include-pid _mocha -- --recursive --reporter ${MOCHA_REPORTER:-spec} db/test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sealneaward/monstars.git"
  },
  "author": "Neil Seward",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sealneaward/monstars/issues"
  },
  "homepage": "https://github.com/sealneaward/monstars#readme",
  "dependencies": {
    "bluebird": "^3.4.3",
    "bunyan": "^1.8.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "eslint": "^3.4.0",
    "istanbul": "^0.4.5",
    "lodash": "^4.15.0",
    "mocha": "^3.0.2",
    "mongoose": "^4.5.10",
    "opener": "^1.4.1",
    "pre-commit": "^1.1.3",
    "rc": "^1.1.6",
    "request": "^2.74.0",
    "rimraf": "^2.5.4"
  }
}
